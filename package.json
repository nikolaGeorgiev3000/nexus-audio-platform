{
  "name": "nexus-audio-platform",
  "version": "1.0.0",
  "description": "A premium marketplace for audiophiles and creators to license high-fidelity audio stems",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"SERVER,CLIENT\" --prefix-colors \"blue,magenta\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "db:setup": "mysql -u root -p < database/schema.sql",
    "db:seed": "mysql -u root -p nexus_audio_db < database/seeds.sql"
  },
  "keywords": [
    "audio",
    "marketplace",
    "music",
    "stems",
    "licensing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
